<h1>New frequency</h1>

<% form_for(@frequency) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :frequency %><br />
    <%= f.text_field :frequency %>
  </p>

  <table>
    <tr>
      <th>Radio</th>
      <th>Antenna</th>
      <th>Modulation Mode</th>
    </tr>
    <tr>
      <td><%= f.select :radio,      Frequency::RADIOS,           :prompt => "Select radio"           %></td>
      <td><%= f.select :antenna,    Frequency::ANTENNAS,         :prompt => "Select antenna"         %></td>
      <td><%= f.select :modulation, Frequency::MODULATION_MODES, :prompt => "Select modulation mode" %></td>
    </tr>
  </table>

  <p>
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </p>

  <p>
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </p>

  <p>
    <%= f.label :call %><br />
    <%= f.text_field :call %>
  </p>

  <p>
    <%= f.label :digimode %><br />
    <%= f.text_field :digimode %>
  </p>

  <p>
    <%= f.label :own_station_rst %><br />
    <%= f.text_field :own_station_rst %>
  </p>

  <p>
    <%= f.label :peer_station_rst %><br />
    <%= f.text_field :peer_station_rst %>
  </p>

  <p>
    <%= f.label :s_meter %><br />
    <%= f.text_field :s_meter %>
  </p>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :qth %><br />
    <%= f.text_field :qth %>
  </p>

  <p>
    <%= f.label :locator %><br />
    <%= f.text_field :locator %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>

<% end %>

<%= link_to 'Back', frequencies_path %>
